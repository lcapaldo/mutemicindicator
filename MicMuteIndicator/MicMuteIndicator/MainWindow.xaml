<Window x:Class="MicMuteIndicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicMuteIndicator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Name="theMainWindow">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Label Visibility="{Binding Path=Muted, ElementName=theMainWindow, Converter={StaticResource BoolToVis} }">Muted</Label>
</Window>
